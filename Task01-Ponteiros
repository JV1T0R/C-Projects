/* QUESTÃO 1 */

#include <stdio.h>

int main()
{
    int inteiro = 5;
    int *ponteiro_inteiro;
    ponteiro_inteiro = &inteiro;
    
    printf("A variável inteira original é: %d\n", inteiro);
    
    *ponteiro_inteiro = 10;
    
    printf("O novo valor da variável inteira é: %d\n", inteiro);
    
    printf("\n");
    
    float real = 2.5;
    float *ponteiro_real;
    ponteiro_real = &real;
    
    printf("A variável real original é: %f\n", real);
    
    *ponteiro_real = 5.0;
    
    printf("O novo valor da variável real é: %f\n", real);
    
    printf("\n");
    
    char caractere = 'C';
    char *ponteiro_caractere;
    ponteiro_caractere = &caractere;
    
    printf("O caractere original é: %c\n", caractere);
    
    *ponteiro_caractere = 'N';
    
    printf("O novo caractere é: %c\n", caractere);
}


